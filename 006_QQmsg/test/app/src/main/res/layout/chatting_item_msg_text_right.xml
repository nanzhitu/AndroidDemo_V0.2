<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_right"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_r_sendtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/msg_time_text"
            android:textColor="@color/msg_time"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="480dp">
        <ImageView
            android:id="@+id/iv_r_userhead"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:focusable="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:background="@mipmap/dialog_fail"
            />
        <RelativeLayout
            android:id="@+id/tv_r_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_r_userhead"
            android:layout_marginRight="10dp"
            android:background="@mipmap/dialog_bg_right"
            >
            <TextView
                android:id="@+id/tv_r_chatcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/msg_chat_text"
                android:textColor="@color/msg_white"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_r_audio_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:textSize="@dimen/msg_chat_text"
                android:textColor="@color/msg_white"
                android:visibility="visible"
                android:text="6      "
                />
            <ImageView
                android:id="@+id/iv_r_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:layout_toRightOf="@id/tv_r_audio_time"
                android:layout_centerInParent="true"
                android:background="@mipmap/dialog_play_right_01"
                android:visibility="visible"
                />

        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_r_msg_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_toLeftOf="@id/tv_r_msg"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/dialog_unread"
            />
    </RelativeLayout>
</LinearLayout>
