<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_left"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="1dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_l_sendtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/msg_time_text"
            android:textColor="@color/msg_time"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="480dp">
        <ImageView
            android:id="@+id/iv_l_userhead"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:focusable="false"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@mipmap/avatar_default"
            />
        <RelativeLayout
            android:id="@+id/tv_l_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_l_userhead"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/dialog_bg_left"
            >
            <TextView
                android:id="@+id/tv_l_chatcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/msg_chat_text"
                android:textColor="@color/msg_white"
                android:visibility="gone"
                android:layout_marginTop="@dimen/padding_text"
                android:layout_marginBottom="@dimen/padding_text"
                />
            <ImageView
                android:id="@+id/iv_l_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:background="@mipmap/dialog_play_left_01"
                android:layout_marginTop="@dimen/padding_text"
                android:layout_marginBottom="@dimen/padding_text"
                />
            <TextView
                android:id="@+id/tv_l_audio_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_l_audio"
                android:layout_centerInParent="true"
                android:textSize="@dimen/msg_chat_text"
                android:textColor="@color/msg_white"
                android:visibility="visible"
                android:layout_marginTop="@dimen/padding_text"
                android:layout_marginBottom="@dimen/padding_text"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_l_msg_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_toRightOf="@id/tv_l_msg"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/dialog_unread"
            />
    </RelativeLayout>
</LinearLayout>
