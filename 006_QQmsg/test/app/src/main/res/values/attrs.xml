<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="XiaoweiCircle">
        <attr name="xc_border_color" format="color" />
        <attr name="xc_border_width" format="dimension" />
        <attr name="xc_rotate_offset_x" format="dimension" />
        <attr name="xc_rotate_offset_y" format="dimension" />
    </declare-styleable>
    <declare-styleable name="MarqueeTextView">
        <attr name="scroll_interval" format="integer" />
        <attr name="scroll_first_delay" format="integer"/>
        <attr name="scroll_mode">
            <enum name="mode_forever" value="100"/>
            <enum name="mode_once" value="101"/>
        </attr>
    </declare-styleable>
</resources>